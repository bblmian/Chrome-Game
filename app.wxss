/**app.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  background-color: #87CEEB;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}

.game-wrapper {
  width: 100%;
  position: relative;
  margin: 20rpx 0;
}

.game-border {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border: 10rpx solid #333;
  border-radius: 15rpx;
  pointer-events: none;
}

.game-container {
  position: relative;
  width: 100%;
  padding-top: 50%;
  overflow: hidden;
  border-radius: 5rpx;
  background-color: #000;
}

.wave-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20%;
  background-color: #ADD8E6;
  opacity: 0.6;
  z-index: 1;
  pointer-events: none;
}

.button-container {
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin: 20rpx 0;
}

button {
  min-width: 200rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
  border-radius: 10rpx;
  background-color: #4CAF50;
  color: white;
}

button[disabled] {
  background-color: #cccccc;
  color: #666666;
}

.instructions {
  width: 90%;
  max-width: 600rpx;
  margin: 20rpx auto;
  padding: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.instructions-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.instruction-text {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
  text-align: center;
}

.banner {
  width: 100%;
  max-width: 600rpx;
  margin: 20rpx auto;
}

.banner image {
  width: 100%;
  height: auto;
}
