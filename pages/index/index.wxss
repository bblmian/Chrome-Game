.camera {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.game-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.game-container {
  position: relative;
  width: 100%;
  padding-top: 50%; /* 2:1 aspect ratio */
  background-color: #000;
  overflow: hidden;
}

.wave-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20%;
  background-color: #ADD8E6;
  opacity: 0.6;
  z-index: 3;
  pointer-events: none;
}

.button-container {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin: 20rpx 0;
}

button {
  min-width: 200rpx;
  font-size: 32rpx;
}

button[disabled] {
  opacity: 0.6;
}

.instructions {
  margin: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.instructions-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.instruction-text {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
  text-align: center;
}

.banner {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.banner image {
  width: 100%;
  height: auto;
}
