.camera {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.game-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.game-container {
  position: relative;
  width: 100%;
  padding-top: 50%; /* 2:1 aspect ratio */
  background-color: #000;
  overflow: hidden;
}

.wave-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20%;
  background-color: #ADD8E6;
  opacity: 0.6;
  z-index: 3;
  pointer-events: none;
}

.stats-container {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  z-index: 4;
}

.stat-item {
  color: white;
  font-size: 28rpx;
  margin: 5rpx 0;
}

.stat-label {
  color: rgba(255, 255, 255, 0.8);
}

.stat-value {
  font-weight: bold;
}

.volume-indicator {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 4;
  width: 40rpx;
  height: 300rpx;
}

.volume-bar {
  position: relative;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  overflow: hidden;
}

.volume-level {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(to top, #4CAF50, #FFA500);
  transition: height 0.1s ease;
}

.pitch-marker {
  position: absolute;
  left: -10rpx;
  width: 60rpx;
  height: 4rpx;
  background: #FFA500;
  transition: bottom 0.1s ease;
}

.debug-panel {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  color: white;
  font-size: 24rpx;
  font-family: monospace;
  z-index: 4;
}

.debug-item {
  margin: 5rpx 0;
}

.message-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
}

.message-box {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  text-align: center;
}

.message-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.message-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.message-button {
  background: #4CAF50;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
}
